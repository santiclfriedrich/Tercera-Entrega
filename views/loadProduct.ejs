    <div id="load-form-container">
        <h2>Cargar producto</h2>
        <form action="/products/load-product" method="post" id="load-form">
            <input type="text" placeholder="Nombre" name="product_name">
            <input type="text" placeholder="Descripcion" name="product_description">
            <input type="number" placeholder="Precio" name="product_price">
            <input type="text" placeholder="url" name="product_imgUrl">
            <input type="number" placeholder="Stock" name="product_stock">
            
            <button class="btn btn-success" type="submit">Enviar</button>
            <button class="btn btn-dark"><a href="./">volver</a></button>

        </form>
    </div>
